{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./build",
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "types/**/*"]
}